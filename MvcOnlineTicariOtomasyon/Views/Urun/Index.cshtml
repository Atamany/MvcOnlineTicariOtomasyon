@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-hover" style="margin-top:20px">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.UrunAd</td>
            <td>@k.Marka</td>
            <td>@k.Stok</td>
            <td>@k.AlisFiyat ₺</td>
            <td>@k.SatisFiyat ₺</td>
            <td>@k.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@k.UrunID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@k.UrunID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Urun/YeniUrun" class="btn btn-primary">Ürün Ekle</a>

