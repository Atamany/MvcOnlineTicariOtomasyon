@model MvcOnlineTicariOtomasyon.Models.Siniflar.KargoTakip
@{
    ViewBag.Title = "TakipEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.7.0.js"></script>
<br />
<h2>Kargo Durumu Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.TakipKodu)
    <input type="text" name="TakipKodu" value="@ViewBag.TakipKod" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary" id="Btn1">Kaydet</button>
</form>

<script>
    $('#Btn1').click(function () {
        alert("Kargo Durumu başarılı bir şekilde eklendi!");
    });
</script>
