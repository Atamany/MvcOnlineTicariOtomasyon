@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Siniflar.SinifGrup4>

<div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Kategori</th>
                <th>Progress Bar</th>
                <th style="width: 40px">Sayı</th>
            </tr>
        </thead>
        <tbody>
            @{ int siraNo = 0;}
            @foreach (var i in Model)
            {
                <tr>
                    <td>@{siraNo++;} @siraNo</td>
                    <td>@i.Kategori</td>
                    <td>
                        @if (i.Sayi == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 20%"></div>
                            </div>
                        }
                        @if (i.Sayi == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 40%"></div>
                            </div>
                        }
                        @if (i.Sayi >= 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 60%"></div>
                            </div>
                        }
                    </td>
                    <td>
                        @if (i.Sayi == 1)
                        {
                            <span class="badge bg-danger">@i.Sayi</span>
                        }
                        @if (i.Sayi == 2)
                        {
                            <span class="badge bg-warning">@i.Sayi</span>
                        }
                        @if (i.Sayi >= 3)
                        {
                            <span class="badge bg-success">@i.Sayi</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>