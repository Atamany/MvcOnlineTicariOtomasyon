@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.7.0.js"></script>
<br />
<h2>Yeni Kalem Ekle</h2>
<br />
<form class="form-group" method="post">

    @Html.HiddenFor(x => x.FaturaID, new { @class = "form-control" })
    @Html.LabelFor(x => x.UrunID)
    @Html.TextBoxFor(x => x.UrunID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Miktar)
    @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BirimFiyat)
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tutar)
    @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary" id="Btn1">Kaydet</button>
</form>

<script>
    $('#Btn1').click(function () {
        alert("Fatura Kalemi başarılı bir şekilde eklendi!");
    });
</script>


